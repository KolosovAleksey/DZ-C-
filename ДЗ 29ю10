#include <iostream>
#include "math.h"
using namespace std;

int main()
{
    setlocale(LC_ALL, "russian");
    int x, y;
    cin >> x >> y;
    if ((y <= 2 * x + 1) && (y <= 2*x+1) && (y <= -2*x+1) && (y <= -2*x-1)){
        cout << "Точка лежит в заданной фигуре ";
    }
    else {
        cout << "Точка не лежит в заданной фигуре";
    }
    return 0;
}
